<div class="row d-flex flex-row justify-content-around mb-2">
  <% articles.each do |article| %>
  <div class="border rounded border-dark mt-3 col-5">
    <div class="d-flex flex-row justify-content-between">
      <div>
        <p><%= article.title %></p>
      </div>
      <div>
        <img class="mr-2 rounded rounded-circle" src="<%= gravatar_url(article.user, { size: 30 }) %>" alt=""><%= link_to article.user.name, user_path(article.user) %>
      </div>
    </div>
    <div>
      <p><%= truncate(article.content, length:30) %></p>
    </div>
    <div class="text-right">
      <%= link_to "続きを読む", article %>
    </div>
  </div>
  <% end %>
</div>
<%= paginate articles%>