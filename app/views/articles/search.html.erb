<div class="text-center mt-1">
  <h1>検索結果</h1>
  <p>検索ワード：<%= @search_word %></p>
  <p>カテゴリー：<%=  @search_category %></p>
  <p><%= @articles_count %>件</p>
  
  <% if @search_word == "指定なし" %>
  <% @search_word = "" %>
  <% end %>
  
  <%= form_with(url: search_articles_path, local: true, method: :get) do |f| %>
  <div class="form-group row justify-content-center">
  <%= text_field_tag :search,@search_word, placeholder: "検索ワードを入力", size: "30",maxlength: "20", class: "col-form-label mr-2" %>
  <%= f.select :category,$category_list, include_blank: "カテゴリーを指定しない", class: "form-control" %>
  <%= f.submit '記事を検索', class: 'btn btn-dark ml-2' %>
  </div>
  <% end %>
</div>
  <% if @articles.blank? %>
  <p class="text-center mt-5">条件に当てはまる記事が見つかりませんでした</p>
  <% else %>
  <%= render "articles", articles: @articles %>
  <% end %>