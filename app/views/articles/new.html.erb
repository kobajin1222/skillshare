<div class="text-center">
  <h1 class="mt-2">記事投稿フォーム</h1>
</div>

<div class="container">
<%= form_with(model: @article, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  
  <div class="form-group row">
    <div class="col-sm-5 text-center col-form-label">
    <%= f.label :title,'タイトル:' %>
    </div>
    <%= f.text_field :title, class: 'form-control col-sm-7'%>
  </div>

  <div class="form-group row">
    <div class="col-sm-5 text-center col-form-label">
    <%= f.label :content, '内容:' %>
    </div>
    <%= f.text_area :content, class: 'form-control col-sm-7', rows: 5 %>
  </div>
  <div class="text-center">
    <p>※タイトルは20文字以内<br>
       内容は2000字以内
    </p>
  </div>
  
  <div class="text-center">
  <%= f.submit '投稿する', class: 'btn btn-light' %>
  </div>
<% end %>
</div>