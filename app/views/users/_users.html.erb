<% if users.any? %>
  <div class="list-unstyled mb-2">
    <% users.each do |user| %>
    <% @count_articles = user.articles.count %>
    <% @count_followings = user.followings.count %>
    <% @count_followers = user.followers.count %>
        <div class=" mt-2 border border-dark rounded p-1 justify-content-between col-8 mx-auto">
          <div class="d-flex flex-row justify-content-center">
            <img class="mr-2 rounded rounded-circle" src="<%= gravatar_url(user, { size: 30 }) %>" alt="">
            <div class="d-flex align-items-center ml-3"><%= link_to user.name, user_path(user) %></div>
          </div>
          <div class="d-flex align-items-center justify-content-center mt-2 mb-2">記事数 :<div class="ml-1 mr-1"><%= @count_articles %></div>/ フォロー :<div class="ml-1 mr-1"><%= @count_followings %></div>/ フォロワー :<div class="ml-1 mr-1 align-items-center"><%= @count_followers %></div></div>
          <div class="d-flex justify-content-center">
            <% if current_user == user %>
              <p class="text-center bg-dark text-white rounded p-2 m-0">あなたです</p>
            <% else %>
              <%= render 'relationships/follow_button', user: user %>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
  <%= paginate users %>
<% end %>