<div class="text-center">
  <h1 class="mt-2">ログイン</h1>
</div>

<div class="container">

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      
      <div class="form-group row">
        <div class="col-sm-5 text-center col-form-label">
        <%= f.label :email, 'メールアドレス:' %>
        </div>
        <%= f.email_field :email, class: 'form-control col-sm-7' %>
      </div>

      <div class="form-group row">
        <div class="col-sm-5 text-center col-form-label">
        <%= f.label :password, 'パスワード:' %>
        </div>
        <%= f.password_field :password, class: 'form-control col-sm-7' %>
      </div>
      
      <div class="text-center">
        <%= f.submit 'ログインする', class: "btn btn-dark" %>
      </div>
    <% end %>
    <div class="row mt-2">
      <div class="d-flex flex-row mx-auto">
        <p>登録していない方はコチラから</p><%= link_to '登録', signup_path %>
      </div>
    </div>
  </div>
  <div>
    <u><a href="/" class="text-dark">＜戻る</a></u>
  </div>
</div>