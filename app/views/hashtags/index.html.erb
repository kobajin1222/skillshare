<div class="text-center mt-1">
  <h1>ハッシュタグ一覧</h1>
</div>

<% if @hashtags.blank? %>
  <p class="text-center">ハッシュタグはまだありません</p>
<% else %>
  <% @hashtags.each do |hashtag| %>
  <%= link_to "#"+hashtag.hashname, "/articles/hashtag/#{hashtag.id}", class: "btn btn-dark"  %>
  <%= hashtag.articles.count %>件の記事
  <% end %>
<% end %>